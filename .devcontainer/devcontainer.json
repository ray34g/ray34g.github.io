{
	"name": "GitHub Actions Compatible DevContainer",
	"build": {
		"dockerfile": "base.Dockerfile"
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"tamasfe.even-better-toml",
				"ms-edgedevtools.vscode-edge-devtools",
				"github.vscode-github-actions",
				"ms-azuretools.vscode-docker",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"mounts": [
		"source=workspace-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
		"source=workspace-npm-cache,target=${containerWorkspaceFolder}/.npm,type=volume",
		"source=workspace-hugo-cache,target=${containerWorkspaceFolder}/.cache/hugo,type=volume"
	],
  "postCreateCommand": "sudo chown -R runner:runner ${containerWorkspaceFolder}/.npm ${containerWorkspaceFolder}/.cache/hugo ${containerWorkspaceFolder}/node_modules || true",
	"postStartCommand": "whoami",
	"forwardPorts": [
		1313
	],
	"remoteUser": "runner"
}
// echo <YOUR_PAT> | podman login ghcr.io -u <your_username> --password-stdin
