{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hugo: Build",
            "type": "shell",
            "command": "hugo",
            "args": [
                "--gc",
                "--minify",
                "--cleanDestinationDir",
                "--environment=production",
            ],
            "presentation": {
                "reveal": "always",
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Hugo: Start Server",
            "type": "shell",
            "command": "hugo",
            "args": [
                "serve",
                "--renderToMemory",
                "--disableFastRender",
                "--ignoreCache",
                "--noHTTPCache",
                "--bind=0.0.0.0",
                "--port='1313'",
                "--appendPort=true",
                "--liveReloadPort='1313'",
                "--watch=true",
                "--poll=700",
                "--navigateToChanged",
                "--environment='development'",
            ],
            "presentation": {
                "reveal": "always",
            },
            "group": "test",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "hugo",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(Error):.*\"(.*?):(\\d*):(\\d*)\": (.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                    },
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": "^Start building .*",
                        "endsPattern": "^", /*Dont match anything*/
                    }
                },
                {
                    "owner": "hugo",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(ERROR).*\"(.*?):(\\d*):(\\d*)\": (.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                        "loop": true,
                    },
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": "Change detected.*",
                        "endsPattern": "Total in .*",
                    }
                }
            ],
        },
        {
          "label": "Hugo: Stop Server",
          "type": "shell",
          "command": "pkill",
          "args": ["hugo"],
          "group": "none"
        },
        {
            "label": "Audit: Lighthouse CI",
            "type": "shell",
            "command": "lhci",
            "args": [
                "autorun"
            ],
            "group": "test",
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "Audit: Broken Links",
            "type": "shell",
            "command": "blc",
            "args": [
                "http://localhost:1314/",
                "--filter-level=2",
                "--exclude-external",
                "--recursive",
                "--verbose",
            ],

            "group": "test",
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "Container: Build",
            "type": "shell",
            "command": "podman",
            "args": [
                "build",
                "-t",
                "ghcr.io/ray34g/arc-runner-node-hugo:0.154.2",
                "./.devcontainer/",
                "-f",
                "base.Dockerfile",
            ],

            "group": "none",
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "Container: Push",
            "type": "shell",
            "command": "podman",
            "args": [
                "push",
                "ghcr.io/ray34g/arc-runner-node-hugo:0.154.2",
            ],

            "group": "none",
            "isBackground": false,
            "problemMatcher": []
        },
    ]
}